{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "preserveSymlinks": true,
    "baseUrl": ".",
    "paths": {
      "@/frontend/*": ["./src/*"],
      "@/backend/*": ["./backend/codebase/app/*"],
    },
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/components/markdoc/Layout.nused", "src/components/markdoc/lib/sections.nused", "src/components/markdoc/lib/navigation.nused", "src/components/markdoc/DocsHeader.nused", "src/components/markdoc/Navigation.nused"],
  // "exclude": ["node_modules"]
  "exclude": ["node_modules", "backend", "./backend"]
}
